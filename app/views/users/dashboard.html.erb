<div class="container">
  <% if @events.length.zero? %>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link" id="no-event-tab" data-toggle="tab" href="#no-event-tab" role="tab" aria-controls="no-event-tab" aria-selected="false">
          Events
        </a>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade active show" id="no-event-tab" role="tabpanel" aria-labelledby="no-event-tab">
          You haven't signed up for any events!
          Browse the "All Events" tab to see events!
      </div>
    </div>

  <% else %>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <% @events.each do |event| %>
        <li class="nav-item">
          <a class="nav-link <%= event.user == current_user ? 'tab-host' : 'tab-attendee' %>" id="event-<%=event.id%>-tab" data-toggle="tab" href="#event-<%=event.id%>" role="tab" aria-controls="event-<%=event.id%>" aria-selected="false">
          <%=event.title%>
          </a>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div class="tab-content" id="myTabContent">
    <% @events.each do |event| %>
      <div class="tab-pane fade <%= 'active show' if @events.first == event %>" id="event-<%=event.id%>" role="tabpanel" aria-labelledby="event-<%=event.id%>-tab">
        <%= render "events/event_tab", event: event %>
      </div>
    <% end %>
  </div>
</div>