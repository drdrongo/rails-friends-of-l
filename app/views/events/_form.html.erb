<h2>Create Event</h2>

<%= simple_form_for (@event) do |f| %>
  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :title,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "title" }%>
    <%= f.input :category,
                collection: Event::CATEGORIES,
                include_blank: false,
                input_html: { autocomplete: "category" }%>
    <%= f.input :datetime,
                required: true,
                input_html: { autocomplete: "datetime" }%>
    <%= f.input :end_time,
                input_html: { autocomplete: "end_time" } %>
    <%= f.input :description,
                input_html: { autocomplete: "description" } %>
    <%= f.input :capacity,
                input_html: { autocomplete: "capacity" }%>
    <%= f.input :venue,
                input_html: { autocomplete: "venue" }%>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '/home', class: 'btn btn-danger ml-2' %>
  </div>
<% end %>
